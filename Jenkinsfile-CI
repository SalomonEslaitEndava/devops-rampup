pipeline {
    environment {
        registry = "salomoneslaitendava/devopsrampup-front"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Clone Repository'){
            steps {
                git url: 'https://github.com/SalomonEslaitEndava/devops-rampup.git', branch: 'second-part'
            }
        }
        stage('Build Image'){
            steps{
                script {
                    dockerImage = docker.build (registry, "/var/lib/jenkins/workspace/rampup-CI/movie-analyst-ui")

                }
                echo "esta es el build number: ${BUILD_NUMBER}"
            }
        }
        stage('Push Image') {
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push("$BUILD_NUMBER")
                        dockerImage.push('latest')

                    }
                }
            }
        }
        stage('ssh test') {
            steps{
                sshagent(['10.0.1.22']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no -l salomon_antonio_eslait 10.0.1.22 'touch sobeloenlaotramaquina.txt'
                    ssh -o StrictHostKeyChecking=no -l salomon_antonio_eslait 10.0.1.22 'git clone https://github.com/SalomonEslaitEndava/kubernetes.git'
                    '''
                }
            }
        }
    }
    
}



