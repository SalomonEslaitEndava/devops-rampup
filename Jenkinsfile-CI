pipeline {
    environment {
        registry = "SalomonEslaitEndava/Devopsrampup-front"
        regustryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning repository'){
            steps {
                git url: 'https://github.com/SalomonEslaitEndava/devops-rampup.git', branch: 'second-part'
            }
        }
        stage('building image'){
            steps{
                script {
                    sh "cd /var/lib/jenkins/workspace/rampup-CI/movie-analyst-ui"
                    dockerImage = docker.build (registry)

                }
            }
        }
    }
}